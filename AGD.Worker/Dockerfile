# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src
COPY ["AGD.Worker/AGD.Worker.csproj", "AGD.Worker/"]
# copy other project references if needed for restore
COPY . .
RUN dotnet restore "AGD.Worker/AGD.Worker.csproj"
RUN dotnet publish "AGD.Worker/AGD.Worker.csproj" -c Release -o /app/publish --no-restore

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "AGD.Worker.dll"]